<% provide(:title, 'Home') %>
<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/stats' %>
      </section>
      <section>
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    <div class="span8">
      <h3>Micropost Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
  <div class="center">
    <h1>Welcome to Chitter</h1>

    <h2>A rails practice project resembling Twitter</h2>

    <%= link_to "Sign up now!", signup_path, class: "btn btn-large" %>
  </div>
<% end %>